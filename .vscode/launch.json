    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        },
        {
            "name": "Launch TEST MLMD",
            "stopOnEntry": false,
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/src/test.php",
            "cwd": "${workspaceFolder}",
            "env": { "XDEBUG_CONFIG": "idekey=VSCODE", "debug": "1", "XDEBUG_PROFILE": "1"},
            "port": 9000
        },
        {
            "name": "MLMD on BLUETY DOC",
            "stopOnEntry": true,
            "type": "php",
            "runtimeExecutable": "C:\\php-8.0.10-nts-Win32-vs16-x64\\php.exe",
            "runtimeArgs": ["-c", "C:\\php-8.0.10-nts-Win32-vs16-x64\\php-release.ini"],
            "request": "launch",
            "program": "${workspaceFolder}/../MLMD/src/mlmd.php",
            "args": ["-i", "docsource/Bluety.mlmd", "-od", "docs", "-out", "md"],
            "cwd": "${workspaceFolder}",
            "env": { "XDEBUG_CONFIG": "idekey=VSCODE", "debug": "1", "XDEBUG_PROFILE": "1"},
            "port": 9003
        }
    ]
}